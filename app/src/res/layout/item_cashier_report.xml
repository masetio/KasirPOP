<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Rank and Trophy -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_rank"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/on_primary"
                android:background="@drawable/bg_rank_gold"
                android:gravity="center" />

            <ImageView
                android:id="@+id/iv_trophy"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_trophy_gold"
                android:layout_marginStart="8dp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tv_kasir_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Kasir"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface" />

                <TextView
                    android:id="@+id/tv_kasir_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@username"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/progress_performance"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:progress="85"
                    android:max="100"
                    android:progressDrawable="@drawable/circular_progress_bar" />

                <TextView
                    android:id="@+id/tv_performance_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Main Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 5.000.000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Penjualan"
                    android:textSize="12sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_total_transactions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 transaksi"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaksi"
                    android:textSize="12sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Secondary Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_paid_transactions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45 lunas"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_unpaid_transactions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 belum lunas"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/error" />

            </LinearLayout>

        </LinearLayout>

        <!-- Additional Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_items_sold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="150 item"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:gravity="start" />

            <TextView
                android:id="@+id/tv_average_transaction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Avg: Rp 100K"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:gravity="end" />

        </LinearLayout>

        <!-- Payment Method Breakdown -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/layout_cash_breakdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/bg_payment_method_cash">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_cash"
                    app:tint="@android:color/holo_green_dark" />

                <TextView
                    android:id="@+id/tv_cash_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25x"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/tv_cash_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3M"
                    android:textSize="10sp"
                    android:textColor="@color/gray_600" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_qris_breakdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_payment_method_qris">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_qris"
                    app:tint="@android:color/holo_blue_dark" />

                <TextView
                    android:id="@+id/tv_qris_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20x"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/tv_qris_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.5M"
                    android:textSize="10sp"
                    android:textColor="@color/gray_600" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_debt_breakdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_payment_method_debt">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_debt"
                    app:tint="@android:color/holo_orange_dark" />

                <TextView
                    android:id="@+id/tv_debt_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5x"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/tv_debt_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500K"
                    android:textSize="10sp"
                    android:textColor="@color/gray_600" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
